<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <Button 
        android:id="@+id/btn_send_intent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_intent"/>
    
    <Button 
        android:id="@+id/btn_register_receiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/register_receiver"/>
    
    <Button
        android:id="@+id/btn_unregister_receiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/unregister_receiver"/>

</LinearLayout>
