<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ioryz.wifidemo.MainActivity" >

    <Button 
        android:id="@+id/btn_enable_wifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enable_wifi" />
    
    <Button 
        android:id="@+id/btn_disable_wifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/disable_wifi" />
    
    <Button 
        android:id="@+id/btn_check_wifi_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/check_wifi_status" />

</LinearLayout>
